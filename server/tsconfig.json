{
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "interfaces/*": ["interfaces/*"],
      "types/*": ["types/*"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true
  },
  "include": ["src/**/*", "../types"],
  "exclude": ["node_modules"]
}
